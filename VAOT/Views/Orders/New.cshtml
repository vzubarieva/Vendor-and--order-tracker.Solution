@{
  Layout = "_Layout";
}

<h1>Add an order</h1>

<form action="/vendors/@Model.searchId/order/" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="title">Title of order:</label>
  <input id="title" name="title" type="text">
  <label for="orderDescription">Description of the order:</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <label for="price">Price:</label>
  <input id="price" name="price" type="number" min="0" step="0.01">
  <label for="date">Date:</label>
  <input id="date" name="date" type="date">
  <button type="submit">Add Order</button>
</form>