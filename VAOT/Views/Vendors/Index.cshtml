<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Vendor List!</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
  @using VAOT.Models;

  <h1>Vendor List</h1>
  @if (Model.Count == 0)
  {
    <p>There are no vendors in the list.</p>
  }
  <ul>
    @foreach (Vendor vendor in Model)
    {
      <li><a href='/vendors/@vendor.Id'>"@vendor.Name"</a></li>
    }

  </ul>
  <a href="/vendors/new">Add a new vendor.</a>
  <br />
  <a href="/">Home</a>
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Clear All Vendors</button>
  </form>
</body>

</html>