@{
  Layout = "_Layout";
}

@using VAOT.Models;


<h1>Your vendor List</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors in the list.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors/@vendor.Id/order'>"@vendor.Name"</a></li>
  }

</ul>
<a href="/vendors/new">Add a new vendor.</a>
<br />
<a href="/">Home</a>
<form action="/vendors/delete" method="post">
  <button type="submit" name="button">Clear All Vendors</button>
</form>
